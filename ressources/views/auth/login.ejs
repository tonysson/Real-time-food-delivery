<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs">
        <form 
            action="/login" 
            method="POST" 
            class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
             <% if(messages.error) {%>
                <span class="text-red-500 text-sm mx-12">
                    <%= messages.error %>
                </span>
            <%}%>   
            <h1 class="text-center block text-gray-700 text-sm font-bold mb-2">
                SE CONNECTER
            </h1>
            <div class="mb-4">
                <label 
                for="username" 
                class="block text-gray-700 text-sm font-bold mb-2">
                Email
                </label>
                <input name="email" type="email " class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Enter your email">
            </div>
            <div class="mb-6">
                <label 
                 for="password" 
                class="block text-gray-700 text-sm font-bold mb-2">
                    Password
                </label>
                <input 
                  name="password" 
                  type="password"
                  class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    placeholder="*************">
            </div>
             <div class="flex items-center justify-between">
                <button type="submit"
                    class="button order_button rounded-full text-white font-bold py-2 px-2 rounded focus:outline-none focus:shadow-outline">
                     connexion
                </button>
                <a href="/login"
                    class="inline-block align-baseline font-bold text-sm ml-6">
                    S'inscrire ?
                </a>
            </div>
           
        </form>
    </div> 
</section>